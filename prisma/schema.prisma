generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int       @id @default(autoincrement())
  email          String    @unique
  hashedPassword String
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  userName       String    @unique
  roles          String    @default("user")
  //relationship 
  todos          Todo[]
  messages       Message[]

  @@map("users")
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?

  @@map("messages")
}

model Todo {
  id          Int      @id @default(autoincrement())
  content     String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  statusId    String?
  priorityId  String?
  sizeId      String?
  //relationship 
  user        User     @relation(fields: [userId], references: [id])
  userId      Int

  @@map("todos")
}

